  ASG_UP:
    TNT1 A 0 A_SpawnItemEx("ASG_Drum_Upgrader",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | SXF_TRANSFERAMBUSHFLAG | SXF_TRANSFERPOINTERS | 288)
    Stop
	
  }
}

