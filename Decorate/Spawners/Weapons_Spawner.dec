Actor Upgrades_Spawner Replaces Chainsaw
{
	+LOOKALLAROUND
  States
  {
  Spawn:
	TNT1 A 0
  Deciding:
	TNT1 A 0 A_Jump(80,"SG_UP")
	TNT1 A 0 A_Jump(90,"SMG_UP")
	TNT1 A 0 A_Jump(100,"BR_UP")
	TNT1 A 0 A_Jump(110,"ASG_UP")
    Loop
  SMG_UP:
    TNT1 A 0 A_SpawnItemEx("SMG_Blood_Stains",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | SXF_TRANSFERAMBUSHFLAG | SXF_TRANSFERPOINTERS | 288)
    Stop
  BR_UP:
    TNT1 A 0 A_SpawnItemEx("HASGDrum",0,0,0,0,0,0,0,SXF_TRANSFERSPECIAL | SXF_TRANSFERAMBUSHFLAG | SXF_TRANSFERPOINTERS | 288)
    Stop
